<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.codemart.CategoryController"
           style="-fx-background-color: linear-gradient(to bottom right, #43A047, #81C784); -fx-padding: 30;">

    <!-- MAIN CONTAINER WITH WHITE BACKGROUND -->
    <BorderPane style="-fx-background-color: white; -fx-background-radius: 18;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0, 0, 3);
                       -fx-padding: 25;">

        <!-- HEADER / TOP BAR -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                                              -fx-background-radius: 12; -fx-padding: 15;">
                <ImageView fitHeight="90" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 2);">
                    <image>
                        <Image url="@Logo.png" /> <!-- Ensure the Logo image exists in the resources folder -->
                    </image>
                </ImageView>

                <Label text="CodeMart"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" />

                <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Button text="Logout" onAction="#onLogoutButtonClick"
                            style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 10; -fx-padding: 8 18;
                                   -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);" />
                </HBox>
            </HBox>
        </top>

        <!-- CENTER CONTENT -->
        <center>
            <VBox alignment="TOP_CENTER" spacing="25" style="-fx-padding: 20;">

                <Label fx:id="welcomeLabel" text="Welcome to CodeMart!"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" />

                <Label text="Select a Category"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" />

                <!-- CATEGORY CARD -->
                <VBox spacing="15" alignment="CENTER"
                      style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #F1F8E9);
                             -fx-background-radius: 18; -fx-padding: 30;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 20, 0, 0, 3);">

                    <!-- CATEGORY GRID -->
                    <TilePane prefColumns="3" hgap="25" vgap="25" alignment="CENTER">

                        <!-- Category Buttons -->
                        <Button text="Food Essentials" prefWidth="180" prefHeight="120"
                                onAction="#onFoodEssentialsButtonClick"
                                style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #43A047);
                                       -fx-background-radius: 18; -fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: white; -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);" />

                        <Button text="Drinks" prefWidth="180" prefHeight="120"
                                onAction="#onDrinksButtonClick"
                                style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #43A047);
                                       -fx-background-radius: 18; -fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: white; -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);" />

                        <Button text="Snacks" prefWidth="180" prefHeight="120"
                                onAction="#onSnacksButtonClick"
                                style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #43A047);
                                       -fx-background-radius: 18; -fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: white; -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);" />

                        <Button text="School Supplies" prefWidth="180" prefHeight="120"
                                onAction="#onSchoolSuppliesButtonClick"
                                style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #43A047);
                                       -fx-background-radius: 18; -fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: white; -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);" />

                        <Button text="Home Needs" prefWidth="180" prefHeight="120"
                                onAction="#onHomeNeedsButtonClick"
                                style="-fx-background-color: linear-gradient(to bottom right, #66BB6A, #43A047);
                                       -fx-background-radius: 18; -fx-font-size: 16px; -fx-font-weight: bold;
                                       -fx-text-fill: white; -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);" />
                    </TilePane>
                </VBox>

                <!-- Tagline / Footer -->
                <VBox alignment="CENTER" spacing="5">
                    <Label text="Enjoy seamless shopping experience âœ¨"
                           style="-fx-font-size: 15px; -fx-text-fill: #388E3C;" />
                    <Label text="Locally yours, proudly Filipino ðŸ‡µðŸ‡­"
                           style="-fx-font-size: 13px; -fx-text-fill: #66BB6A;" />
                </VBox>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
