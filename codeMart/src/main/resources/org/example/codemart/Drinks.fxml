<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.codemart.DrinksController"
           style="-fx-background-color: linear-gradient(to bottom right, #43A047, #81C784); -fx-padding: 25;">

    <BorderPane style="-fx-background-color: white; -fx-background-radius: 18;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0, 0, 3); -fx-padding: 20;">

        <center>
            <HBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 10;">

                <!-- LEFT SIDE (Product Section) -->
                <VBox spacing="15" HBox.hgrow="ALWAYS" maxWidth="700"
                      style="-fx-background-color: linear-gradient(to bottom right, #FFFFFF, #F1F8E9);
                             -fx-background-radius: 15; -fx-padding: 20;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 3);">

                    <!-- LOGO + TITLE -->
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitWidth="100" preserveRatio="true"
                                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 2);">
                            <image>
                                <Image url="@Logo.png"/>
                            </image>
                        </ImageView>

                        <Label text="Drinks"
                               style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;" />
                    </HBox>

                    <Label text="Refreshing beverages to quench your thirst "
                           style="-fx-font-size: 15px; -fx-text-fill: #4CAF50;" />

                    <!-- PRODUCT LIST -->
                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <GridPane fx:id="productGrid" hgap="20" vgap="20" alignment="TOP_LEFT">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5;
                                         -fx-padding: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);
                                         -fx-pref-width: 200;">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/waterbottle.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Bottled Water" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <Label text="â‚±20.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Bottled Water|20.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5;
                                         -fx-padding: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);
                                         -fx-pref-width: 200;">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/soft_drinks.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Soft Drinks" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <Label text="â‚±35.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Soft Drinks|35.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                            <VBox GridPane.rowIndex="0" GridPane.columnIndex="2" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5;
                                         -fx-padding: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);
                                         -fx-pref-width: 200;">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/juice_drink.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Juice Drink" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <Label text="â‚±30.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Juice Drink|30.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5; -fx-padding: 12;
                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/energy_drink.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Energy Drink" style="-fx-font-weight: bold;"/>
                                <Label text="â‚±50.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Energy Drink|50.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5; -fx-padding: 12;
                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/coffee.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Coffee" style="-fx-font-weight: bold;"/>
                                <Label text="â‚±25.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Coffee|25.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                            <VBox GridPane.rowIndex="1" GridPane.columnIndex="2" alignment="TOP_CENTER" spacing="8"
                                  style="-fx-background-color: white; -fx-background-radius: 12;
                                         -fx-border-color: linear-gradient(to bottom right, #81C784, #388E3C);
                                         -fx-border-radius: 12; -fx-border-width: 1.5; -fx-padding: 12;
                                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 10, 0, 0, 2);">
                                <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
                                    <image>
                                        <Image url="@/org/example/codemart/tea.png"/>
                                    </image>
                                </ImageView>
                                <Label text="Tea" style="-fx-font-weight: bold;"/>
                                <Label text="â‚±20.00" style="-fx-text-fill: #D32F2F;"/>
                                <Button text="Add to Cart" onAction="#onAddToCartButtonClick" userData="Tea|20.00"
                                        style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047);
                                               -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;"/>
                            </VBox>

                        </GridPane>
                    </ScrollPane>

                    <!-- BACK BUTTON -->
                    <Button text="Back to Categories"
                            onAction="#onBackToCategoriesButtonClick"
                            style="-fx-background-color: linear-gradient(to right, #81C784, #4CAF50);
                                   -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;
                                   -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0, 0, 2);">
                        <VBox.margin>
                            <Insets top="10" />
                        </VBox.margin>
                    </Button>
                </VBox>

                <Separator orientation="VERTICAL" prefHeight="200" />

                <!-- RIGHT SIDE (CART) -->
                <VBox spacing="10" minWidth="300" maxWidth="350"
                      style="-fx-background-color: linear-gradient(to bottom right, #E8F5E9, #C8E6C9);
                             -fx-background-radius: 15; -fx-padding: 15; -fx-border-color: #81C784;
                             -fx-border-width: 2; -fx-border-radius: 15;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 2);">

                    <Label text="ðŸ›’ Shopping Cart"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
                        <VBox fx:id="cartItemsVBox" spacing="5" />
                    </ScrollPane>

                    <Separator/>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="TOTAL:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                        <Label fx:id="cartTotalLabel" text="â‚±0.00"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"/>
                    </HBox>

                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>
