<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.codemart.RegisterController"
            prefWidth="420" prefHeight="520"
            style="-fx-background-color: linear-gradient(to bottom right, #4CAF50, #2E7D32);">

    <VBox alignment="CENTER" spacing="15" prefWidth="400" layoutX="10" layoutY="40">

        <!-- White Card -->
        <VBox spacing="15" alignment="CENTER"
              prefWidth="320" prefHeight="420"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25;">
            <effect>
                <DropShadow radius="8" color="#1B5E20"/>
            </effect>

            <Label text="Create Account"
                   style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

            <Separator prefWidth="250" style="-fx-opacity: 0.4;"/>

            <TextField fx:id="regUsernameField" promptText="Username"
                       style="-fx-background-radius: 10; -fx-padding: 8;"
                       maxWidth="250"/>

            <TextField fx:id="regEmailField" promptText="Email"
                       style="-fx-background-radius: 10; -fx-padding: 8;"
                       maxWidth="250"/>

            <PasswordField fx:id="regPasswordField" promptText="Password"
                           style="-fx-background-radius: 10; -fx-padding: 8;"
                           maxWidth="250"/>

            <PasswordField fx:id="regConfirmPasswordField" promptText="Confirm Password"
                           style="-fx-background-radius: 10; -fx-padding: 8;"
                           maxWidth="250"/>

            <Button text="Register"
                    onAction="#onRegisterButtonClick"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-pref-width: 120; -fx-padding: 8;"
                    prefWidth="150"/>

            <Label fx:id="regStatusLabel"
                   style="-fx-text-fill: #2E7D32; -fx-font-size: 13px; -fx-font-weight: bold;"/>

            <!-- ✅ Fixed: added fx:id for the Back to Login button -->
            <Button fx:id="backToLoginButton"
                    text="← Back to Login"
                    onAction="#onBackToLoginButtonClick"
                    style="-fx-background-color: transparent; -fx-text-fill: #388E3C;
                           -fx-underline: true; -fx-font-size: 12px; -fx-cursor: hand;"/>

        </VBox>
    </VBox>
</AnchorPane>
