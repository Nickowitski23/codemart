<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.codemart.RegisterController"
           style="-fx-background-color: linear-gradient(to bottom right, #43A047, #66BB6A);">

    <!-- Main Container -->
    <VBox alignment="CENTER" spacing="25">

        <VBox spacing="20" alignment="CENTER"
              prefWidth="460" prefHeight="600"
              style="-fx-background-color: white;
                     -fx-background-radius: 20;
                     -fx-padding: 35;">
            <effect>
                <DropShadow radius="12" color="rgba(0,0,0,0.3)"/>
            </effect>

            <!-- Logo with Shadow -->
            <StackPane>
                <ImageView fitWidth="140" fitHeight="140" preserveRatio="true">
                    <image>
                        <Image url="@Logo.png"/>
                    </image>
                    <effect>
                        <DropShadow radius="20" color="rgba(0,0,0,0.35)" offsetY="4"/>
                    </effect>
                </ImageView>
            </StackPane>

            <Label text="Create Account"
                   style="-fx-font-size: 30px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2E7D32;"/>

            <Separator prefWidth="300" style="-fx-opacity: 0.3;"/>

            <TextField fx:id="regUsernameField" promptText="Username"
                       style="-fx-background-radius: 10;
                              -fx-padding: 10;
                              -fx-font-size: 14px;
                              -fx-background-color: #F9F9F9;
                              -fx-border-color: #C8E6C9;
                              -fx-border-radius: 10;"
                       maxWidth="320"/>

            <TextField fx:id="regEmailField" promptText="Email"
                       style="-fx-background-radius: 10;
                              -fx-padding: 10;
                              -fx-font-size: 14px;
                              -fx-background-color: #F9F9F9;
                              -fx-border-color: #C8E6C9;
                              -fx-border-radius: 10;"
                       maxWidth="320"/>

            <PasswordField fx:id="regPasswordField" promptText="Password"
                           style="-fx-background-radius: 10;
                                  -fx-padding: 10;
                                  -fx-font-size: 14px;
                                  -fx-background-color: #F9F9F9;
                                  -fx-border-color: #C8E6C9;
                                  -fx-border-radius: 10;"
                           maxWidth="320"/>

            <PasswordField fx:id="regConfirmPasswordField" promptText="Confirm Password"
                           style="-fx-background-radius: 10;
                                  -fx-padding: 10;
                                  -fx-font-size: 14px;
                                  -fx-background-color: #F9F9F9;
                                  -fx-border-color: #C8E6C9;
                                  -fx-border-radius: 10;"
                           maxWidth="320"/>

            <Button text="Register"
                    onAction="#onRegisterButtonClick"
                    style="-fx-background-color: linear-gradient(to right, #43A047, #66BB6A);
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-font-size: 15px;
                           -fx-background-radius: 10;
                           -fx-pref-width: 180;
                           -fx-padding: 10;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 5, 0, 0, 2);"/>

            <Label fx:id="regStatusLabel"
                   style="-fx-text-fill: #2E7D32;
                          -fx-font-size: 13px;
                          -fx-font-weight: bold;"/>

            <Button fx:id="backToLoginButton"
                    text="â† Back to Login"
                    onAction="#onBackToLoginButtonClick"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: #388E3C;
                           -fx-font-size: 13px;
                           -fx-font-weight: bold;
                           -fx-underline: true;
                           -fx-cursor: hand;"/>
        </VBox>
    </VBox>
</StackPane>
