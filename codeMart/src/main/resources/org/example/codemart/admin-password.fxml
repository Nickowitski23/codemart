<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.codemart.AdminPasswordController"
           style="-fx-background-color: linear-gradient(to bottom right, #43A047, #81C784);">

    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 18;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 5);">

        <Label text="Admin Access"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2E7D32;"/>

        <Label text="Enter Admin Password:"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <PasswordField fx:id="adminPasswordField" promptText="Password"
                       style="-fx-background-radius: 12; -fx-padding: 5; -fx-border-radius: 12;"/>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: red;"/>

        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel" onAction="#onCancelButtonClick"
                    style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 12; -fx-padding: 8 15;"/>
            <Button text="Proceed" onAction="#onProceedButtonClick"
                    style="-fx-background-color: linear-gradient(to right, #66BB6A, #43A047); -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 8 20;"/>
        </HBox>
    </VBox>
</StackPane>
